{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "klotho",
  "patterns": [
    {
      "include": "#block"
    }
  ],
  "repository": {
    "block": {
      "begin": "(@klotho)(::)(\\w+)\\s*(?={\\s*$)",
      "beginCaptures": {
        "1": {
          "name": "variable.other.klotho"
        },
        "2": {
          "name": "token.info-token.klotho"
        },
        "3": {
          "name": "support.type.capability.klotho"
        }
      },
      "end": "(?:\\G|^)\\s*(#|//|\\*)?\\s*(})",
      "endCaptures": {
        "2": {
          "name": "token.info-token.klotho"
        }
      },
      "patterns": [
        {
          "include": "#directives"
        }
      ]
    },
    "directives": {
      "name": "meta.directives",
      "patterns": [
        {
          "match": "(?:^|\\G)[^}{=]*({)\\s*$",
          "captures": {
            "1": {
              "name": "token.info-token.klotho"
            }
          }
        },
        {
          "match": "(?:\\G|^)\\s*(#|\\*|//)?\\s*(.*$)",
          "captures": {
            "2": {
              "name": "meta.embedded.inline.toml",
              "patterns": [
                {
                  "include": "source.toml"
                }
              ]
            }
          }
        }
      ]
    }
  },
  "scopeName": "source.klotho"
}
