{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "dockerfile.klotho",
  "patterns": [
    {
      "include": "#docker-block"
    }
  ],
  "repository": {
    "docker-block": {
      "begin": "(?:\\G|^)\\s*(#\\s*)(@klotho)(::)(\\w+)\\s*(?={\\s*$)",
      "while": "(?:\\G|^)\\s*(?=#)",
      "beginCaptures": {
        "1": {
          "name": "comment.prefix.klotho"
        },
        "2": {
          "name": "keyword.other.klotho"
        },
        "3": {
          "name": "meta.embedded.punctuation.definition.block.klotho"
        },
        "4": {
          "name": "support.type.capability.klotho"
        }
      },
      "end": "(?:\\G|^)\\s*(#|//|\\*)?\\s*(})",
      "endCaptures": {
        "1": {
          "name": "comment.prefix.klotho"
        },
        "2": {
          "name": "meta.embedded.punctuation.definition.block.klotho"
        }
      },
      "patterns": [
        {
          "include": "#directives"
        }
      ]
    },
    "directives": {
      "name": "meta.directives",
      "patterns": [
        {
          "match": "(?:^|\\G)[^}{=]*({)\\s*$",
          "captures": {
            "1": {
              "name": "meta.embedded.punctuation.definition.block.klotho"
            }
          }
        },
        {
          "match": "(?:\\G|^)\\s*(#|\\*|//)?\\s*(.*$)",
          "captures": {
            "1": {
              "name": "comment.prefix.klotho"
            },
            "2": {
              "name": "meta.embedded.inline.toml",
              "patterns": [
                {
                  "include": "source.toml"
                }
              ]
            }
          }
        }
      ]
    }
  },
  "scopeName": "source.klotho.dockerfile"
}
